import tkinter as tk,cv2,numpy as np

def push():
      path=list(var.get())
      print(path)
      if '"' in path:
            path.remove('"');path.pop()
            path=''.join(path)
      try:
            img=cv2.imread(path)
            if type(img)!=np.ndarray:
                  print('請輸入有效路徑')
            else:
                  cv2.imshow('qwe',img)
      except:
            print('請輸入有效路徑')
def push2():
      In.delete(0,tk.END)
            
window=tk.Tk()
window.title('sao')
window.geometry('200x200')

MENU=tk.Menu(window)#建立最上層菜單
menu_1=tk.Menu(MENU)#建立一個MENU的子菜單
MENU.add_cascade(label='開啟',menu=menu_1)#將子菜單實體化並命名
menu_1.add_command(label='圖片')#在子菜單下建立按鈕並命名
menu_1.add_command(label='影片')
window.config(menu=MENU)#綁定MENU


tex=tk.Label(window,text='請輸入圖片路徑，須包含副檔名')
tex.pack()

var=tk.StringVar(window)
In=tk.Entry(window,textvariable=var)
In.pack()

But=tk.Button(window,command=push,text='星爆氣流斬')
But.pack()
But2=tk.Button(window,command=push2,text='水平四方斬')
But2.pack()

window.mainloop()
